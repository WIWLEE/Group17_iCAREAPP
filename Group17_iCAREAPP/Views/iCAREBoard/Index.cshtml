
@model IEnumerable<Group17_iCAREAPP.Controllers.GeoCodeViewModel>

@{
    ViewBag.Title = "iCARE Board";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>iCARE Board</h2>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Select Geographical Area</h5>
        <div class="row mt-3">
            @foreach (var geoCode in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">@geoCode.Description</h6>
                            <a href="@Url.Action("DisplayByGeoCode", "iCAREBoard", new { geoCodeId = geoCode.ID })"
                               class="btn btn-primary">
                                <i class="fas fa-map-marker-alt"></i> View Patients
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>