@model IEnumerable<Group17_iCAREAPP.Models.iCAREAdmin>

@{
    ViewBag.Title = "Admin Management";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h2 class="mb-0">Admin Management</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        @Html.ActionLink("Create New Admin", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">@Html.DisplayNameFor(model => model.adminEmail)</th>
                                        <th scope="col">@Html.DisplayNameFor(model => model.dateHired)</th>
                                        <th scope="col">@Html.DisplayNameFor(model => model.dateFinished)</th>
                                        <th scope="col">@Html.DisplayNameFor(model => model.iCAREUser.name)</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.adminEmail)</td>
                                            <td>@Html.DisplayFor(modelItem => item.dateHired)</td>
                                            <td>@Html.DisplayFor(modelItem => item.dateFinished)</td>
                                            <td>@Html.DisplayFor(modelItem => item.iCAREUser.name)</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-sm btn-outline-primary me-1" })
                                                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-sm btn-outline-info me-1" })
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-sm btn-outline-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No admin records found. Click "Create New Admin" to add one.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>