@model IEnumerable<Group17_iCAREAPP.Models.GeoCodes>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">
            <i class="fas fa-hospital-alt me-2"></i>iCARE Board
        </h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">Geographical Areas Overview</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover" id="iCAREBOARDTable">
                <thead class="table-light">
                    <tr>
                        <th>Location</th>
                        <th>Patients</th>
                        <th>Location ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                    <span>@item.description</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info">@item.PatientRecord1.Count</span>
                            </td>
                            <td>
                                <small class="text-muted">@item.ID</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Details", new { id = item.ID })"
                                       class="btn btn-primary btn-sm">
                                        <i class="fas fa-child me-1"></i> View Patients
                                    </a>
                                    <a href="@Url.Action("AssignWholeArea", new { id = item.ID })"
                                       class="btn btn-success btn-sm">
                                        <i class="fas fa-check-circle me-1"></i> Assign
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .page-title {
        color: #2c3e50;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.125);
    }

    .table {
        margin-bottom: 0;
    }

        .table thead th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.825rem;
            letter-spacing: 0.5px;
        }

    .btn-group .btn {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .badge {
        padding: 0.5em 0.75em;
        font-weight: 500;
    }

    .btn-outline-primary:hover, .btn-outline-success:hover {
        color: white;
    }

    #iCAREBOARDTable_wrapper .dataTables_filter input {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        padding: 0.375rem 0.75rem;
        margin-left: 0.5rem;
    }

    .dataTables_wrapper .dataTables_paginate {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #dee2e6;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.375rem 0.75rem;
            margin: 0 0.25rem;
            border: 1px solid #dee2e6;
            background-color: #fff;
            color: #6c757d !important;
            border-radius: 0.25rem;
            transition: all 0.2s;
            cursor: pointer;
        }

            .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
                background-color: #e9ecef !important;
                border-color: #dee2e6;
                color: #495057 !important;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button.current {
                background-color: #0d6efd !important;
                border-color: #0d6efd;
                color: #fff !important;
                font-weight: 500;
            }

                .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
                    background-color: #0b5ed7 !important;
                    border-color: #0a58ca;
                    color: #fff !important;
                }

            .dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
                background-color: #f8f9fa !important;
                border-color: #dee2e6;
                color: #6c757d !important;
                cursor: not-allowed;
                opacity: 0.6;
            }

    .dataTables_wrapper .dataTables_length select {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        padding: 0.375rem 2.25rem 0.375rem 0.75rem;
        background-color: #fff;
        cursor: pointer;
    }

    .dataTables_wrapper .dataTables_filter input {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        padding: 0.375rem 0.75rem;
        margin-left: 0.5rem;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#iCAREBOARDTable').DataTable({
                "ordering": true,
                "paging": true,
                "searching": true,
                "responsive": true,
                "dom": '<"d-flex justify-content-between align-items-center mb-3"lf>rtip',
                "language": {
                    "search": "Filter records:",
                    "lengthMenu": "Show _MENU_ entries"
                },
                "pageLength": 10,
                "order": [[0, "asc"]],
                "drawCallback": function () {
                    $('.dataTables_paginate .paginate_button').addClass('btn btn-sm btn-outline-secondary mx-1');
                }
            });
        });
    </script>
}